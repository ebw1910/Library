@model IEnumerable<TransferViewModel>
@{
    ViewBag.Title = "Transfers";
    Layout = "_Layout";
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr><th>Номер читательского</th><th colspan="2">Детали</th><th></th></tr>
        @foreach (var o in Model)
        {
            <tr>
                <th></th>
                <th>Книга</th>
                <th>Количество</th>
                <td>
                    <form asp-action="MarkShipped" method="post">
                        <input type="hidden" name="transferId" value="@o.TransferID" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Вернуть
                        </button>
                    </form>
                </td>
            </tr>
            @foreach (var line in o.Lines)
            {
    <tr>

        <td>@o.CardNumber</td>
        <td>@line.Book.Name </td>
        <td> @line.Quantity</td>
      
    </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">Нет выданных книг</div>
}