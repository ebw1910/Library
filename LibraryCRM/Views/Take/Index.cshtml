@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@using LibraryCRM.Models.ViewModels
@model TakeIndexViewModel

<h2>Книги на выдачу</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>Название книги</th>
            <th class="text-right">Автор</th>
            <th class="text-right">Колличество</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Take.Lines)
        {
        <tr>

            <td class="text-left">@line.Book.Name</td>

            <td class="text-right">@line.Book.Author</td>
            <td class="text-left">@line.Quantity</td>

            <td>
                <form asp-action="RemoveFromTake" method="post">
                    <input type="hidden" name="BookID"
                           value="@line.Book.BookID" />
                    <input type="hidden" name="returnUrl"
                           value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">
                        Вернуть книгу
                    </button>
                </form>
            </td>

        </tr>
        }
    </tbody>

</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Вернуться в библиотеку</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Transfer">
        Выдать книги
    </a>
   
       
  
</div>